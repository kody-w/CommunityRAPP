    "system": "NPC Inheritance System",
    "description": "Defines what passes from predecessor to successor"
  },

  "inheritance_categories": {
    "skills": {
      "category_id": "cat_skills",
      "name": "Skill Inheritance",
      "description": "Combat techniques, crafting abilities, and special powers",
      "transfer_rules": {
        "max_skills_transferred": 5,
        "skill_degradation": 0.1,
        "mastery_requirement_for_full_transfer": 0.8,
        "signature_skill_bonus": 1.5
      },
      "skill_types": {
        "combat": {
          "transfer_rate": 0.8,
          "requires_training": true,
          "examples": ["Flame Strike", "Shadow Step", "Pattern Recognition"]
        },
        "craft": {
          "transfer_rate": 0.9,
          "requires_training": true,
          "examples": ["Artifact Repair", "Dream Painting", "Archive Navigation"]
        },
        "social": {
          "transfer_rate": 0.6,
          "requires_training": false,
          "examples": ["Negotiation", "Storytelling", "Leadership"]
        },
        "mystical": {
          "transfer_rate": 0.5,
          "requires_training": true,
          "examples": ["Prophecy Reading", "Memory Communion", "Dimensional Sensing"]
        }
      }
    },

    "items": {
