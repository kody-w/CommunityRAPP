      "name": "Item Inheritance",
      "description": "Weapons, tools, artifacts, and treasures",
      "transfer_rules": {
        "automatic_transfer": ["signature_items", "lineage_artifacts"],
        "conditional_transfer": ["personal_gear", "accumulated_wealth"],
        "non_transferable": ["soul_bound_items", "curse_locked_items"]
      },
      "item_categories": {
        "signature_artifacts": {
