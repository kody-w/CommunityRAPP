      "description": "Sealed bids revealed only at auction end",
      "default_duration_ticks": 24,
      "min_duration_ticks": 12,
      "max_duration_ticks": 48,
      "rules": {
        "one_bid_per_participant": true,
        "reveal_all_bids_at_end": true,
        "tie_breaker": "earliest_submission"
      }
    },
    "dutch": {
      "name": "Dutch Auction",
      "description": "Price descends until someone claims",
      "default_duration_ticks": 12,
      "min_duration_ticks": 6,
      "max_duration_ticks": 24,
      "price_rules": {
        "default_decrement_percent": 0.10,
        "decrement_interval_ticks": 2,
        "floor_percent_of_start": 0.25
      }
    }
  },
