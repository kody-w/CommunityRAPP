        "additional_bidders_chance": 0.5
      }
    },
    "narrative_events": {
      "dramatic_pause": {
        "trigger": "high_bid_placed",
        "duration_ticks": 1,
        "description_pool": [
          "The auction hall falls silent...",
          "All eyes turn to see who dares respond...",
          "Tension crackles through the air..."
        ]
      },
      "bidding_frenzy": {
        "trigger": "3_bids_in_1_tick",
        "description_pool": [
          "Bids fly faster than the auctioneer can call them!",
          "The crowd erupts as the price skyrockets!",
          "A bidding frenzy engulfs the auction hall!"
        ]
      },
      "snipe_drama": {
        "trigger": "last_tick_bid",
        "description_pool": [
          "At the last possible moment, a new bid appears!",
          "Just as the hammer was about to fall...",
          "SNIPE! A late bid shocks the entire hall!"
        ]
      },
      "record_broken": {
        "trigger": "new_record_price",
        "description_pool": [
          "HISTORY IS MADE! A new price record!",
          "The record shatters as a new high is set!",
          "An unprecedented price rocks the auction world!"
        ]
      }
    },
