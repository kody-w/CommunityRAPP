{
  "name": "openRAPP",
  "version": "1.0.0",
  "description": "Rapid AI Agent Production Pipeline - Transform conversations into deployed AI agents",
  "author": "RAPP Team",
  "license": "MIT",
  "homepage": "https://kody-w.github.io/m365-agents-for-python/openrapp/",
  "repository": "https://github.com/kody-w/m365-agents-for-python",
  "api": {
    "base_url": "https://rapp-ov4bzgynnlvii.azurewebsites.net/api/businessinsightbot_function",
    "method": "POST",
    "content_type": "application/json"
  },
  "capabilities": [
    "transcript_to_agent",
    "auto_process",
    "quality_gates",
    "report_generation",
    "rappbook_publishing",
    "moltbook_integration"
  ],
  "actions": [
    {
      "name": "transcript_to_agent",
      "description": "Generate a complete agent from a discovery transcript",
      "parameters": {
        "transcript": {"type": "string", "required": true, "description": "Discovery transcript text"},
        "project_id": {"type": "string", "required": true, "description": "Unique project identifier"},
        "customer_name": {"type": "string", "required": true, "description": "Customer/company name"},
        "agent_priority": {"type": "string", "required": false, "description": "Agent type to prioritize"}
      },
      "returns": ["agent_code", "demo_json", "tester_html", "agent_spec"]
    },
    {
      "name": "auto_process",
      "description": "Process all inputs through the full 14-step pipeline",
      "parameters": {
        "project_id": {"type": "string", "required": true}
      }
    },
    {
      "name": "execute_quality_gate",
      "description": "Run a quality gate validation",
      "parameters": {
        "gate": {"type": "string", "required": true, "enum": ["QG1", "QG2", "QG3", "QG4", "QG5", "QG6"]},
        "project_id": {"type": "string", "required": true}
      }
    },
    {
      "name": "list_agents",
      "description": "List all available agents"
    },
    {
      "name": "execute_agent",
      "description": "Run an agent action",
      "parameters": {
        "agent_name": {"type": "string", "required": true},
        "action": {"type": "string", "required": true},
        "params": {"type": "object", "required": false}
      }
    },
    {
      "name": "publish_to_rappbook",
      "description": "Publish agent to RAPPbook",
      "parameters": {
        "agent_id": {"type": "string", "required": true},
        "title": {"type": "string", "required": true},
        "submolt": {"type": "string", "default": "agents"}
      }
    },
    {
      "name": "publish_to_moltbook",
      "description": "Publish agent to Moltbook",
      "parameters": {
        "agent_id": {"type": "string", "required": true},
        "moltbook_api_key": {"type": "string", "required": true},
        "title": {"type": "string", "required": true}
      }
    }
  ],
  "quality_gates": {
    "QG1": {"step": 2, "purpose": "Transcript quality", "decisions": ["PASS", "CLARIFY", "FAIL"]},
    "QG2": {"step": 4, "purpose": "MVP scope approval", "decisions": ["PROCEED", "REVISE", "HOLD"]},
    "QG3": {"step": 6, "purpose": "Code review", "decisions": ["PASS", "FIX_REQUIRED", "FAIL"]},
    "QG4": {"step": 8, "purpose": "Demo quality", "decisions": ["PASS", "POLISH", "FAIL"]},
    "QG5": {"step": 10, "purpose": "Executive readiness", "decisions": ["APPROVE", "REVISIONS", "REJECT"]},
    "QG6": {"step": 13, "purpose": "Post-deployment", "decisions": ["GREEN", "YELLOW", "RED"]}
  },
  "output_structure": {
    "agent_code": "{agent_id}_agent.py",
    "demo_json": "{agent_id}_demo.json",
    "tester_html": "agent_tester.html",
    "reports": "{report_type}_report.pdf"
  },
  "integrations": {
    "rappbook": {
      "url": "https://kody-w.github.io/m365-agents-for-python/rappbook/",
      "skill": "rappbook/skill.md"
    },
    "moltbook": {
      "url": "https://www.moltbook.com",
      "skill": "https://moltbook.com/skill.md"
    }
  },
  "rate_limits": {
    "requests_per_minute": 100,
    "agent_generation_per_hour": 10,
    "reports_per_hour": 20
  },
  "files": {
    "skill_md": "skill.md",
    "skill_json": "skill.json",
    "readme": "README.md"
  }
}
